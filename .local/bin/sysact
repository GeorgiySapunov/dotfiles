#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "âš¿ lock\nğŸ¡„ leave dwm\nğŸ—˜ renew dwm\nâ¼ hibernate\nâ¾ sleep\nâ†º reboot\nâ» shutdown\nâ–ª display off" | dmenu -i -p 'Action: ')" in
	'âš¿ lock') betterlockscreen -l ;;
	'ğŸ¡„ leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ—˜ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'â¼ hibernate') betterlockscreen -l $ctl hibernate ;;
	'â¾ sleep') betterlockscreen -l $ctl suspend ;;
	'â†º reboot') $ctl reboot ;;
	'â» shutdown') $ctl poweroff ;;
	'â–ª display off') xset dpms force off ;;
	*) exit 1 ;;
esac
