#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸšª leave dwm\nğŸ’« renew dwm\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ§³ shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') betterlockscreen -l ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ’« renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» hibernate') betterlockscreen -l $ctl hibernate ;;
	'ğŸ’¤ sleep') betterlockscreen -l $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ§³ shutdown') $ctl poweroff ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
